<ui:UXML xmlns:ui="UnityEngine.UIElements">

    <ui:Style src="project:/Assets/Scripts/A_ToolkitUI/Styles/GameUI_Base.uss" />
    <ui:Style src="project:/Assets/Scripts/A_ToolkitUI/Styles/GameUI_Planning.uss" />
    <ui:Style src="project:/Assets/Scripts/A_ToolkitUI/Styles/GameUI_HUD.uss" />
    <ui:Style src="project:/Assets/Scripts/A_ToolkitUI/Styles/GameUI_Slots.uss" />

    <ui:VisualElement name="PlanningPanel" class="root-panel">

        <ui:VisualElement name="SeedEditorPanel" class="side-panel-left">
            <ui:Label text="GENE EDITOR" class="h1" />
            <ui:Label text="CURRENT SEED" class="section-header-small" />
            <ui:VisualElement name="seed-drop-slot-container" class="seed-drop-slot-container" />
            <ui:Label text="PASSIVE GENES" class="section-header-small" />
            <ui:VisualElement name="passive-genes-container" class="genes-container" />
            <ui:Label text="ACTIVE SEQUENCE" class="section-header-small" />
            <ui:VisualElement name="active-sequence-container" class="genes-container" />
        </ui:VisualElement>

        <ui:VisualElement name="InventoryPanel" class="main-panel">
            <ui:Label text="INVENTORY" class="h1" />
            <ui:VisualElement name="inventory-grid" class="inventory-grid" />
        </ui:VisualElement>

        <ui:VisualElement name="SeedSpecSheetPanel" class="side-panel-right">
            <ui:VisualElement class="header">
                <ui:Image name="seed-icon" class="seed-icon" />
                <ui:VisualElement class="title-container">
                    <ui:Label name="seed-name-text" class="h1" text="Select a Seed" />
                    <ui:Label name="quality-text" class="h2" text="Awaiting Analysis..." />
                </ui:VisualElement>
            </ui:VisualElement>
            <ui:Label name="description-text" class="description-text" />
            <ui:Label text="PERFORMANCE" class="section-header" />
            <ui:VisualElement class="section-content">
                <ui:Label name="maturity-time-text" class="metric-text" />
                <ui:Label name="energy-balance-text" class="metric-text" />
                <ui:Label name="yield-text" class="metric-text" />
            </ui:VisualElement>
            <ui:Label text="ATTRIBUTES" class="section-header" />
            <ui:VisualElement name="attribute-breakdown-container" class="section-content" />
            <ui:Label text="SEQUENCE ANALYSIS" class="section-header" />
            <ui:VisualElement class="section-content">
                <ui:Label name="cycle-time-text" />
                <ui:VisualElement name="sequence-breakdown-container" class="list-container" />
            </ui:VisualElement>
            <ui:Label text="SYNERGIES &amp; WARNINGS" class="section-header" />
            <ui:VisualElement class="section-content">
                <ui:VisualElement name="synergies-container" class="list-container" />
                <ui:VisualElement name="warnings-container" class="list-container" />
            </ui:VisualElement>
        </ui:VisualElement>

    </ui:VisualElement>

    <ui:VisualElement name="HUDPanel" class="root-panel">

        <ui:VisualElement name="hud-top-bar" class="hud-top-bar">
            <ui:VisualElement name="tick-panel" class="tick-panel">

                <ui:VisualElement name="wave-progress-container" class="wave-progress-container">
                    <ui:Label name="day-marker" text="DAY" class="wave-marker wave-marker--day" />
                    <ui:VisualElement name="wave-progress-bar-bg" class="wave-progress-bar-bg">
                        <ui:VisualElement name="wave-progress-bar-fill" class="wave-progress-bar-fill" />
                        <ui:VisualElement name="night-marker-line" class="night-marker-line" />
                    </ui:VisualElement>
                    <ui:Label name="night-marker" text="NIGHT" class="wave-marker wave-marker--night" />
                </ui:VisualElement>

                <ui:Label name="tick-text" text="Tick: 0/100" class="tick-text-large" />
            </ui:VisualElement>
        </ui:VisualElement>

        <!-- Simple hotbar tooltip - centered above the bottom monolith -->
        <ui:Label name="hotbar-tooltip-label" text="" class="hotbar-tooltip-label" />
        <ui:Label name="world-hover-tooltip" text="" class="world-hover-tooltip" />

        <ui:VisualElement name="hud-bottom-monolith" class="hud-bottom-monolith">

            <ui:VisualElement name="player-hunger-panel" class="hunger-panel hunger-panel--left">
                <ui:VisualElement class="hunger-panel-inner">
                    <ui:Label name="player-hunger-label" text="HUNGER" class="hunger-label hunger-label--centered" />
                    <ui:VisualElement name="player-hunger-bar-bg" class="hunger-bar-bg">
                        <ui:VisualElement name="player-hunger-bar-fill" class="player-hunger-bar-fill" />
                        <ui:Label name="player-hunger-text" text="0/100" class="hunger-text-centered" />
                    </ui:VisualElement>
                </ui:VisualElement>
            </ui:VisualElement>

            <ui:VisualElement name="Hotbar" class="hotbar">
                <ui:ListView name="hotbar-list" class="hotbar-list" />
                <ui:VisualElement name="hotbar-selector" class="hotbar-selector" />
            </ui:VisualElement>

            <ui:VisualElement name="doris-hunger-footer" class="hunger-panel hunger-panel--right">
                <ui:VisualElement class="hunger-panel-inner">
                    <ui:Label name="doris-hunger-label" text="DORIS'S HUNGER" class="hunger-label hunger-label--centered" />
                    <ui:VisualElement name="doris-hunger-bar-bg" class="hunger-bar-bg">
                        <ui:VisualElement name="doris-hunger-bar-fill" class="doris-hunger-bar-fill" />
                        <ui:Label name="doris-hunger-text" text="0/100" class="hunger-text-centered" />
                    </ui:VisualElement>
                </ui:VisualElement>
            </ui:VisualElement>

        </ui:VisualElement>

    </ui:VisualElement>

</ui:UXML>
